{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/theopenlane/core/pkg/catalog/catalog",
  "$ref": "#/$defs/Catalog",
  "$defs": {
    "Billing": {
      "properties": {
        "prices": {
          "items": {
            "$ref": "#/$defs/Price"
          },
          "type": "array",
          "description": "List of price options for this feature"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "prices"
      ]
    },
    "Catalog": {
      "properties": {
        "version": {
          "type": "string",
          "description": "Catalog version",
          "examples": [
            "1.0.0"
          ]
        },
        "sha": {
          "type": "string",
          "description": "SHA of the catalog version"
        },
        "modules": {
          "$ref": "#/$defs/FeatureSet",
          "description": "Set of modules available in the catalog"
        },
        "addons": {
          "$ref": "#/$defs/FeatureSet",
          "description": "Set of addons available in the catalog"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "version",
        "sha",
        "modules",
        "addons"
      ]
    },
    "Feature": {
      "properties": {
        "display_name": {
          "type": "string",
          "description": "Human-readable name for the feature",
          "examples": [
            "Advanced Reporting"
          ]
        },
        "description": {
          "type": "string",
          "description": "Optional description of the feature",
          "examples": [
            "Provides advanced analytics and reporting capabilities"
          ]
        },
        "billing": {
          "$ref": "#/$defs/Billing",
          "description": "Billing information for the feature"
        },
        "audience": {
          "type": "string",
          "enum": [
            "public",
            "private",
            "beta"
          ],
          "description": "Intended audience for the feature",
          "examples": [
            "public"
          ]
        },
        "usage": {
          "$ref": "#/$defs/Usage",
          "description": "Usage limits granted by the feature"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "display_name",
        "description",
        "billing",
        "audience"
      ]
    },
    "FeatureSet": {
      "additionalProperties": {
        "$ref": "#/$defs/Feature"
      },
      "type": "object"
    },
    "Price": {
      "properties": {
        "interval": {
          "type": "string",
          "enum": [
            "year",
            "month"
          ],
          "description": "Billing interval for the price",
          "examples": [
            "month"
          ]
        },
        "unit_amount": {
          "type": "integer",
          "description": "Amount to be charged per interval",
          "examples": [
            1000
          ]
        },
        "nickname": {
          "type": "string",
          "description": "Optional nickname for the price",
          "examples": [
            "price_compliance_monthly"
          ]
        },
        "lookup_key": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$",
          "description": "Optional lookup key for referencing the price",
          "examples": [
            "price_compliance_monthly"
          ]
        },
        "metadata": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object",
          "description": "Additional metadata for the price"
        },
        "price_id": {
          "type": "string",
          "description": "Stripe price ID",
          "examples": [
            "price_1N2Yw2A1b2c3d4e5"
          ]
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "interval",
        "unit_amount"
      ]
    },
    "Usage": {
      "properties": {
        "evidence_storage_gb": {
          "type": "integer",
          "description": "Storage limit in GB for evidence",
          "examples": [
            10
          ]
        },
        "record_count": {
          "type": "integer",
          "description": "Maximum number of records allowed",
          "examples": [
            1000
          ]
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}