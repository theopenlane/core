{
  "name": "microsoft_teams",
  "displayName": "Microsoft Teams",
  "category": "collab",
  "authType": "oauth2",
  "authStartPath": "/v1/integrations/oauth/start",
  "authCallbackPath": "/v1/integrations/oauth/callback",
  "active": false,
  "visible": true,
  "logoUrl": "",
  "docsUrl": "https://docs.theopenlane.io/docs/platform/integrations/microsoft_teams/overview",
  "oauth": {
    "clientId": "${MICROSOFT_TEAMS_CLIENT_ID}",
    "clientSecret": "${MICROSOFT_TEAMS_CLIENT_SECRET}",
    "authUrl": "https://login.microsoftonline.com/common/oauth2/v2.0/authorize",
    "tokenUrl": "https://login.microsoftonline.com/common/oauth2/v2.0/token",
    "scopes": [
      "https://graph.microsoft.com/User.Read",
      "https://graph.microsoft.com/Team.ReadBasic.All",
      "https://graph.microsoft.com/Channel.ReadBasic.All",
      "https://graph.microsoft.com/ChannelMessage.Send",
      "offline_access"
    ],
    "redirectUri": "https://api.theopenlane.io/v1/integrations/callback"
  },
  "userInfo": {
    "url": "https://graph.microsoft.com/v1.0/me",
    "method": "GET",
    "authStyle": "Bearer",
    "idPath": "id",
    "emailPath": "mail",
    "loginPath": "displayName"
  },
  "persistence": {
    "storeRefreshToken": true
  },
  "labels": {
    "vendor": "microsoft",
    "product": "teams"
  },
  "credentialsSchema": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "tenantId"
    ],
    "properties": {
      "alias": {
        "type": "string",
        "title": "Credential Alias",
        "description": "Friendly name for this Microsoft 365 tenant."
      },
      "tenantId": {
        "type": "string",
        "title": "Tenant ID",
        "description": "Azure AD tenant hosting the Teams instance."
      }
    }
  },
  "description": "Integrate with Microsoft Teams to collect collaboration metadata and send notification messages through Microsoft Graph."
}
