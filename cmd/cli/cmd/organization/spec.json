    "preHook": "organizationCreate"
  },
  "update": {
    "method": "UpdateOrganization",
    "idFlag": {"name": "id", "shorthand": "i", "usage": "organization id to update"},
    "inputType": "openlaneclient.UpdateOrganizationInput",
    "resultPath": ["updateOrganization", "organization"],
    "fields": [
      {"flag": {"name": "name", "shorthand": "n", "usage": "name of the organization"}, "field": "Name", "kind": "string"},
      {"flag": {"name": "display-name", "shorthand": "s", "usage": "display name of the organization"}, "field": "DisplayName", "kind": "string"},
      {"flag": {"name": "description", "shorthand": "d", "usage": "description of the organization"}, "field": "Description", "kind": "string"},
      {"flag": {"name": "avatar-file", "shorthand": "a", "usage": "local path to avatar file to upload"}, "field": "", "kind": "string"}
    ],
    "preHook": "organizationUpdate"
  },
  "delete": {
    "method": "DeleteOrganization",
    "idFlag": {"name": "id", "shorthand": "i", "usage": "organization id to delete"},
    "resultPath": ["deleteOrganization", "deletedID"],
    "resultField": "deletedID"
  },
  "columns": [
    {"header": "ID", "path": ["id"]},
    {"header": "Name", "path": ["name"]},
    {"header": "DisplayName", "path": ["displayName"]},
    {"header": "Description", "path": ["description"]},
    {"header": "PersonalOrg", "path": ["personalOrg"]}
  ],
  "deleteColumns": [
    {"header": "DeletedID", "path": ["deletedID"]}
  ]
