{
  "name": "template",
  "use": "template",
  "short": "the subcommands for working with templates",
  "list": {
    "method": "GetAllTemplates",
    "root": "templates"
  },
  "get": {
    "method": "GetTemplateByID",
    "idFlag": {"name": "id", "shorthand": "i", "usage": "template id to query"},
    "resultPath": ["template"],
    "listRoot": "templates",
    "fallbackList": true,
    "preHook": "templateGet"
  },
  "create": {
    "method": "CreateTemplate",
    "inputType": "openlaneclient.CreateTemplateInput",
    "resultPath": ["createTemplate", "template"],
    "preHook": "templateCreate",
    "fields": [
      {"flag": {"name": "name", "shorthand": "n", "usage": "name of the template", "required": true}, "kind": "string"},
      {"flag": {"name": "description", "shorthand": "d", "usage": "description of the template"}, "kind": "string"},
      {"flag": {"name": "json-config", "shorthand": "j", "usage": "json payload for the template", "required": true}, "kind": "string"},
      {"flag": {"name": "ui-schema", "shorthand": "u", "usage": "ui schema for the template"}, "kind": "string"},
      {"flag": {"name": "type", "shorthand": "t", "usage": "type of the template", "default": "DOCUMENT"}, "kind": "string"},
      {"flag": {"name": "kind", "shorthand": "k", "usage": "kind of the template", "default": "QUESTIONNAIRE"}, "kind": "string"},
      {"flag": {"name": "trust-center-id", "shorthand": "c", "usage": "trust center id to associate with the template"}, "kind": "string"}
    ]
  },
  "columns": [
    {"header": "ID", "path": ["id"]},
    {"header": "Name", "path": ["name"]},
    {"header": "Description", "path": ["description"]},
    {"header": "Kind", "path": ["kind"]},
    {"header": "Type", "path": ["templateType"]}
  ]
}
