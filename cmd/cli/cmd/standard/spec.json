{
  "name": "standard",
  "use": "standard",
  "short": "the subcommands for working with standards",
  "list": {
    "method": "GetAllStandards",
    "root": "standards"
  },
  "get": {
    "method": "GetStandardByID",
    "idFlag": {"name": "id", "shorthand": "i", "usage": "standard id to query"},
    "resultPath": ["standard"],
    "fallbackList": true
  },
  "create": {
    "method": "CreateStandard",
    "inputType": "openlaneclient.CreateStandardInput",
    "resultPath": ["createStandard", "standard"],
    "fields": [
      {"flag": {"name": "name", "shorthand": "n", "usage": "name of the standard", "required": true}, "field": "Name", "kind": "string"},
      {"flag": {"name": "description", "shorthand": "d", "usage": "description of the standard"}, "field": "Description", "kind": "string"},
      {"flag": {"name": "version", "shorthand": "v", "usage": "version of the standard"}, "field": "Version", "kind": "string"},
      {"flag": {"name": "domains", "shorthand": "m", "usage": "domain included in the standard"}, "field": "Domains", "kind": "stringSlice"},
      {"flag": {"name": "tags", "shorthand": "t", "usage": "tags of the standard"}, "field": "Tags", "kind": "stringSlice"},
      {"flag": {"name": "category", "shorthand": "c", "usage": "category of the standard"}, "field": "StandardType", "kind": "string"},
      {"flag": {"name": "status", "shorthand": "s", "usage": "status of the standard"}, "field": "Status", "kind": "string", "parser": "standardStatus"},
      {"flag": {"name": "link", "shorthand": "l", "usage": "link to the governing body of the standard"}, "field": "Link", "kind": "string"},
      {"flag": {"name": "framework", "shorthand": "f", "usage": "framework name for the standard"}, "field": "Framework", "kind": "string"},
      {"flag": {"name": "governing-body", "shorthand": "g", "usage": "governing body of the standard"}, "field": "GoverningBody", "kind": "string"},
      {"flag": {"name": "governing-body-log-url", "shorthand": "u", "usage": "governing body URL for the logo"}, "field": "GoverningBodyLogoURL", "kind": "string"}
    ]
  },
  "update": {
    "method": "UpdateStandard",
    "idFlag": {"name": "id", "shorthand": "i", "usage": "standard id to update", "required": true},
    "inputType": "openlaneclient.UpdateStandardInput",
    "resultPath": ["updateStandard", "standard"],
    "fields": [
      {"flag": {"name": "name", "shorthand": "n", "usage": "name of the standard"}, "field": "Name", "kind": "string"},
      {"flag": {"name": "description", "shorthand": "d", "usage": "description of the standard"}, "field": "Description", "kind": "string"},
      {"flag": {"name": "version", "shorthand": "v", "usage": "version of the standard"}, "field": "Version", "kind": "string"},
      {"flag": {"name": "domains", "shorthand": "m", "usage": "domain included in the standard"}, "field": "Domains", "kind": "stringSlice"},
      {"flag": {"name": "tags", "shorthand": "t", "usage": "tags of the standard"}, "field": "Tags", "kind": "stringSlice"},
      {"flag": {"name": "category", "shorthand": "c", "usage": "category of the standard"}, "field": "StandardType", "kind": "string"},
      {"flag": {"name": "status", "shorthand": "s", "usage": "status of the standard"}, "field": "Status", "kind": "string", "parser": "standardStatus"},
      {"flag": {"name": "link", "shorthand": "l", "usage": "link to the governing body of the standard"}, "field": "Link", "kind": "string"},
      {"flag": {"name": "framework", "shorthand": "f", "usage": "framework name for the standard"}, "field": "Framework", "kind": "string"},
      {"flag": {"name": "governing-body", "shorthand": "g", "usage": "governing body of the standard"}, "field": "GoverningBody", "kind": "string"},
      {"flag": {"name": "governing-body-log-url", "shorthand": "u", "usage": "governing body URL for the logo"}, "field": "GoverningBodyLogoURL", "kind": "string"},
      {"flag": {"name": "revision", "shorthand": "r", "usage": "revision of the standard"}, "field": "Revision", "kind": "string"},
      {"flag": {"name": "bump-revision", "shorthand": "b", "usage": "bump major, minor, or patch version"}, "field": "RevisionBump", "kind": "string"}
    ]
  },
  "delete": {
    "method": "DeleteStandard",
    "idFlag": {"name": "id", "shorthand": "i", "usage": "standard id to delete", "required": true},
    "resultPath": ["deleteStandard", "deletedID"],
    "resultField": "deletedID"
  },
  "columns": [
    {"header": "ID", "path": ["id"]},
    {"header": "Name", "path": ["name"]},
    {"header": "ShortName", "path": ["shortName"]},
    {"header": "Framework", "path": ["framework"]},
    {"header": "Status", "path": ["status"]},
    {"header": "Version", "path": ["version"]}
  ],
  "deleteColumns": [
    {"header": "DeletedID", "path": ["deletedID"]}
  ]
}
